{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@entity/*": [
        "src/database/entity/*"
      ],
      "@event/*": [
        "src/event/*"
      ],
      "@notification/*": [
        "src/notification/*"
      ]
    }
  }
}
